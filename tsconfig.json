{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "lib": ["ESNext", "dom"],
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "pretty": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "noImplicitAny": false,
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "cypress", "@badeball/cypress-cucumber-preprocessor"]
  },

  "ts-node": {
    "esm": true
  },

  "include": ["cypress/**/*.ts", "uat.config.ts", "qa.config.ts", "cypress.config.ts", "eslint.config.mjs"],

  "exclude": ["node_modules", "dist", "**/*.d.ts", "cypress/screenshots", "cypress/videos"]
}
